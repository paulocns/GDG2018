<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.psato.devfest">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".infrastructure.DevFestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.home.HomeActivity"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.MVP.QueryActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".presentation.MVVM.QueryActivity"
                  android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>